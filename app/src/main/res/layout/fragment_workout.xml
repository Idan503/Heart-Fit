<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentWorkout">



    <com.hamzaahmedkhan.circulartimerview.CircularTimerView
        android:id="@+id/workout_CTV_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:progressColor="#000"
        app:backgroundColor="#e76130"
        app:progressBackgroundColor="#eee"
        app:backgroundWidth="8"
        app:textSize="28sp"
        app:suffix=" sec"
        app:progressText="Time Remaining..."
        app:maxValue="100"
        app:startingPoint="bottom"

        app:progressTextColor="#eee"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"

        >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:scaleX="-1"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"
            android:id="@+id/workout_BTN_prev"
            />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_pause_circle_filled_24"
            android:scaleType="fitCenter"
            android:id="@+id/workout_BTN_pause_resume"
            />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:scaleType="fitCenter"

            android:id="@+id/workout_BTN_next"
            />



    </LinearLayout>



</RelativeLayout>